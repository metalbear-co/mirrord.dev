{
    "name": "tailwindflow",
    "version": "1.0.0",
    "description": "TailwindFlow",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/kreasify/tailwindflow"
    },
    "author": "Akhlis <github@akhlis>",
    "license": "MIT",
    "scripts": {
        "dev": "concurrently npm:watch:*",
        "watch:tw": "tailwindcss -i ./assets/css/styles.css -o ./assets/css/site.css --watch",
        "watch:hugo": "hugo server hugo server --disableFastRender",
        "build": "hugo --gc --minify",
        "start": "hugo server --bind 192.168.1.106"
    },
    "browserslist": [
        "last 2 version",
        "> 1%",
        "maintained node versions",
        "not dead"
    ],
    "dependencies": {
        "@tailwindcss/aspect-ratio": "^0.4.0",
        "autoprefixer": "^10.4.7",
        "hugo-extended": "^0.109.0",
        "postcss": "^8.4.14",
        "postcss-cli": "^9.1.0",
        "postcss-import": "^14.1.0",
        "tailwindcss": "^3.1.4"
    },
    "devDependencies": {
        "concurrently": "^7.6.0"
    }
}
